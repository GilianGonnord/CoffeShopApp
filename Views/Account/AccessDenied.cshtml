@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card card-coffee">
            <div class="card-body text-center">
                <i class="fas fa-ban fa-4x text-danger mb-4"></i>
                <h2>Access Denied</h2>
                <p class="text-muted mb-4">
                    You don't have the required permissions to access this resource.
                </p>
                <p class="text-muted mb-4">
                    <i class="fas fa-info-circle coffee-icon"></i>
                    Contact your manager if you believe this is an error.
                </p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-coffee">
                    <i class="fas fa-home"></i> Go Home
                </a>
            </div>
        </div>
    </div>
</div>