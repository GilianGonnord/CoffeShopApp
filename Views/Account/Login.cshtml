@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card card-coffee">
            <div class="card-header text-center">
                <h2><i class="fas fa-coffee coffee-icon"></i> Login to Coffee Shop</h2>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                    </div>
                }
                
                <form method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">
                            <i class="fas fa-user"></i> Username
                        </label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock"></i> Password
                        </label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-coffee">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>
                
                @if (ViewBag.IsMicrosoftAuthEnabled == true)
                {
                    <div class="text-center mb-3">
                        <span class="text-muted">or</span>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <a asp-action="LoginWithMicrosoft" class="btn btn-primary">
                            <i class="fab fa-microsoft"></i> Connect with Microsoft
                        </a>
                    </div>
                }
                
                <hr>
                <div class="text-center">
                    <p class="mb-0">Don't have an account? 
                        <a asp-action="Register" class="text-decoration-none" style="color: var(--coffee-brown);">
                            Register here
                        </a>
                    </p>
                </div>
                
                <div class="mt-4 p-3 bg-light rounded">
                    <h6><i class="fas fa-info-circle coffee-icon"></i> Demo Accounts</h6>
                    <small class="text-muted">
                        <strong>Manager:</strong> admin / admin123<br>
                        <strong>Barista:</strong> barista / barista123
                    </small>
                </div>
                
                @if (ViewBag.IsMicrosoftAuthEnabled == true)
                {
                    <div class="mt-3 p-3 bg-info bg-opacity-10 rounded">
                        <h6><i class="fab fa-microsoft text-primary"></i> Microsoft Login</h6>
                        <small class="text-muted">
                            Use your Microsoft account to login. Your email must match an existing account in our system.
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>