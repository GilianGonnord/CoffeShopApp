@model CoffeeShopApp.Models.Coffee

@{
    ViewData["Title"] = "Delete Coffee";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h2><i class="fas fa-exclamation-triangle"></i> Delete Coffee</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-warning"></i> 
                    <strong>Warning!</strong> Are you sure you want to delete this coffee? This action cannot be undone.
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <h4>@Model.Name</h4>
                        <p class="text-muted">@Model.Description</p>
                        
                        <div class="mb-2">
                            <strong>Price:</strong> 
                            <span class="text-success">$@Model.Price.ToString("F2")</span>
                        </div>
                        
                        <div class="mb-2">
                            <strong>Origin:</strong> @Model.Origin
                        </div>
                        
                        <div class="mb-2">
                            <strong>Roast Level:</strong> @Model.RoastLevel
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>Status:</strong>
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Out of Stock</span>
                            }
                        </div>
                        
                        <div class="mb-2">
                            <strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Coffee
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>