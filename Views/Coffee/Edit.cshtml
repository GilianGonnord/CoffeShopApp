@model CoffeeShopApp.Models.Coffee

@{
    ViewData["Title"] = "Edit Coffee";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-coffee">
            <div class="card-header">
                <h2><i class="fas fa-edit coffee-icon"></i> Edit Coffee</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-mug-hot coffee-icon"></i> Coffee Name
                                </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Origin" class="form-label">
                                    <i class="fas fa-globe coffee-icon"></i> Origin
                                </label>
                                <input asp-for="Origin" class="form-control" />
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="RoastLevel" class="form-label">
                                    <i class="fas fa-fire coffee-icon"></i> Roast Level
                                </label>
                                <select asp-for="RoastLevel" class="form-select">
                                    <option value="">Select Roast Level</option>
                                    <option value="Light">Light Roast</option>
                                    <option value="Medium">Medium Roast</option>
                                    <option value="Medium-Dark">Medium-Dark Roast</option>
                                    <option value="Dark">Dark Roast</option>
                                </select>
                                <span asp-validation-for="RoastLevel" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">
                                    <i class="fas fa-dollar-sign coffee-icon"></i> Price
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" class="form-control" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="IsAvailable" />
                                    <label class="form-check-label" asp-for="IsAvailable">
                                        <i class="fas fa-check-circle coffee-icon"></i> Available for Sale
                                    </label>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar coffee-icon"></i> 
                                    Created: @Model.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left coffee-icon"></i> Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-coffee">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}